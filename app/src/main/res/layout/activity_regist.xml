<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

          <ImageView
                android:id="@+id/logo"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/logo"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <!-- 아이디 입력 -->
        <EditText
            android:id="@+id/et_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="아이디 (6~20자 이내의 영문/숫자 입력)"
            android:inputType="text" />

        <!-- 비밀번호 입력 -->
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호 (6~20자 이내의 영문/숫자 입력)"
            android:inputType="textPassword" />

        <!-- 비밀번호 확인 입력 -->
        <EditText
            android:id="@+id/et_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호를 한 번 더 입력해주세요"
            android:inputType="textPassword" />

        <!-- 이름 입력 -->
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름"
            android:inputType="text" />

        <!-- 전화번호 입력 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_phone1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="전화번호"
                android:inputType="number" />

            <EditText
                android:id="@+id/et_phone2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="number" />

            <EditText
                android:id="@+id/et_phone3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="number" />
        </LinearLayout>

        <!-- 계좌번호 입력 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Spinner
                android:id="@+id/spinner_bank"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <!--android:entries="@array/bank_names" -->

            <EditText
                android:id="@+id/et_account_number"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:hint="계좌번호"
                android:inputType="number" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_verify_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계좌 인증"
            android:layout_gravity="end"
            android:layout_marginTop="8dp" />

        <!-- 배송지 입력 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/et_address_search"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="배송지"
                android:inputType="text" />

            <Button
                android:id="@+id/btn_find_zipcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="우편번호 찾기" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_address_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="기본 주소 입력"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_address_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="상세 주소 입력"
            android:inputType="text" />

        <!-- 회원 가입 완료 버튼 -->
        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원 가입 완료"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>